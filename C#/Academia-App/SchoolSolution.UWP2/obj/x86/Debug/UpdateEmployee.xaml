<Page
    x:Class="Registracio.UWP.UpdateEmployee"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Registracio.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <TextBox x:ConnectionId='4' x:Name="employeeNameUpdateTb" PlaceholderText="Full Name" Margin="100" Width="350" TextAlignment="Left"/>
            <DatePicker x:ConnectionId='5' x:Name="birthDatePicker" Header="Date of birth" Margin="575,0,0,575" Width="350"/>
        </StackPanel>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:ConnectionId='2' Icon="Accept" Label="Confrim"                                  />
            <AppBarButton x:ConnectionId='3' Icon="Back" Label="GoBack" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Bottom"                                 />
        </CommandBar>
    </Grid>
</Page>

